<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Butter Chicken Image -->
        <ImageView
            android:id="@+id/butter_chicken_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/butterchiken"
            android:scaleType="centerCrop"
            android:contentDescription="Butter Chicken" />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>


        <!-- Ingredients -->
        <TextView
            android:id="@+id/butter_chicken_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧂 Ingredients:\n\n• 500g boneless chicken\n• 1 cup yogurt\n• 1 tbsp ginger-garlic paste\n• 1 tsp turmeric\n• 1 tsp red chili powder\n• Salt to taste\n• 2 tbsp butter\n• 1 onion (finely chopped)\n• 1 cup tomato puree\n• 1/2 tsp garam masala\n• 1/2 cup cream\n• Kasuri methi (optional)"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Steps Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n👨‍🍳 Preparation Steps:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp" />

        <!-- Step CheckBoxes -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Marinate chicken in yogurt, spices, and ginger-garlic paste for 1-2 hours." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Sauté marinated chicken until browned, then set aside." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: In a pan, melt butter and cook onions until soft." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4: Add tomato puree and cook until thick." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 5: Add chicken, cream, and garam masala. Simmer for 10–15 mins." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 6: Garnish with kasuri methi and more butter. Serve with naan." />
    </LinearLayout>
</ScrollView>
