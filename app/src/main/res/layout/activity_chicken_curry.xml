            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Steps Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nðŸ‘¨â€ðŸ³ Preparation Steps:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp" />

        <!-- Step CheckBoxes -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Heat oil, sautÃ© cumin seeds, then add onions and cook until golden." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Add ginger-garlic paste, cook for a minute, then add pureed tomatoes." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Stir in turmeric, chili powder, and salt. Cook until oil separates." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4: Add chicken and sear until browned, then add yogurt and mix." />

        <CheckBox
            android:layout_width="wrap_content"
