<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <!-- Afghani Chicken Image -->
        <ImageView
            android:id="@+id/afghani_chicken_image"
            android:layout_width="411dp"
            android:layout_height="250dp"
            android:contentDescription="Afghani Chicken"
            android:scaleType="centerCrop"
            android:src="@drawable/afganichicken" />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>


        <!-- Ingredients -->
        <TextView
            android:id="@+id/afghani_chicken_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧂 Ingredients:\n\n• 500g chicken (with bone preferred)\n• 1/2 cup hung curd\n• 2 tbsp fresh cream\n• 1 tbsp ginger-garlic paste\n• 1 tsp white pepper powder\n• 1 tsp kasuri methi\n• 1 tbsp lemon juice\n• 1 tbsp ghee or butter\n• Salt to taste"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Steps Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n👨‍🍳 Preparation Steps:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp" />

        <!-- Step CheckBoxes -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Clean chicken and make deep cuts for marination." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Prepare marinade using curd, cream, lemon juice, ginger-garlic paste, and spices." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Apply marinade to chicken and rest for 4–6 hours or overnight." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4: Grill or pan-fry chicken pieces on medium heat until fully cooked." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 5: Baste with butter or ghee for rich flavor and finish with a smoky char." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 6: Garnish with coriander or serve with green chutney and onion rings." />
    </LinearLayout>
</ScrollView>
