<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Chilli Chicken Image -->
        <ImageView
            android:id="@+id/chilli_chicken_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/tandoorichicken"
            android:scaleType="centerCrop"
            android:contentDescription="Chilli Chicken" />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>


        <!-- Ingredients -->
        <TextView
            android:id="@+id/chilli_chicken_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧂 Ingredients:\n\n• 500g boneless chicken\n• 2 tbsp soy sauce\n• 1 tbsp chili sauce\n• 1 tbsp vinegar\n• 1 tbsp corn flour\n• 1 tbsp all-purpose flour\n• 1 tsp black pepper\n• 1 egg\n• 1 onion (cubed)\n• 1 capsicum (cubed)\n• 4-5 garlic cloves (chopped)\n• 2 green chilies (slit)\n• Spring onion for garnish\n• Salt and oil as needed"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Steps Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n👨‍🍳 Preparation Steps:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp" />

        <!-- Step CheckBoxes -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Marinate chicken with soy sauce, pepper, flours, egg, and rest 30 min." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Deep fry or shallow fry chicken pieces until golden. Set aside." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: In a pan, heat oil, sauté garlic, green chilies, onions, and capsicum." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4: Add soy sauce, chili sauce, vinegar, salt. Cook for 2 mins." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 5: Toss in fried chicken, mix well, cook for 2-3 mins to coat evenly." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 6: Garnish with spring onion. Serve hot as starter or with fried rice." />
    </LinearLayout>
</ScrollView>
