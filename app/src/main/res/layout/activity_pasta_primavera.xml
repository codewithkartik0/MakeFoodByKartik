<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Pasta Primavera Image -->
        <ImageView
            android:id="@+id/pasta_primavera_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/tandoorichicken"
            android:scaleType="centerCrop"
            android:contentDescription="Pasta Primavera" />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_play"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>


        <!-- Ingredients -->
        <TextView
            android:id="@+id/pasta_primavera_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧂 Ingredients:\n\n• 250g pasta (penne or spaghetti)\n• 1 cup mixed vegetables (bell peppers, zucchini, carrots)\n• 2 tbsp olive oil\n• 1 tbsp garlic (minced)\n• 1/4 cup cream\n• 1/4 cup grated Parmesan\n• Fresh basil for garnish\n• Salt and pepper to taste"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Steps Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n👨‍🍳 Preparation Steps:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="24dp" />

        <!-- Step CheckBoxes -->
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1: Cook pasta according to package instructions, then drain." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Heat olive oil, sauté garlic and mixed vegetables until tender." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 3: Add cream, Parmesan cheese, and cooked pasta. Stir to coat." />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4: Season with salt and pepper, garnish with fresh basil, and serve." />
    </LinearLayout>
</ScrollView>
